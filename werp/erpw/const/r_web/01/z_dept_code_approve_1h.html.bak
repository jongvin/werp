//-------------------------------------------------------------------------------
function sp_call()                  //Stored Procedure Call 
//--------------------------------------------------------------------------------
{
	var li_unq_num,ls_dept_tag,ls_comp_code,ll_cnt,ls_dept_code
	
	if (is_class != "1") {            //승인자료를 조회하고 있을경우 
		alert("요청자료만 승인처리 가능합니다")
		return
	}
	ll_row = ds_1.RowPosition
	if (ll_row < 1) {
		alert("승인할 자료를 선택하시오")
		return
	}
	if ( ds_1.NameValue(ll_row,'dept_proj_tag') == 'H') {
		ls_dept_code = ds_1.NameValue(ll_row,"dept_code")
		ll_cnt = f_select_q("select nvl(count(*),0) select_1 from z_code_dept where dept_code = '" + ls_dept_code + "'")
		if (ds_select.NameValue(ds_select.RowPosition,'select_1') > 0 ) {
			alert('이미 존재하는 부서코드입니다.(부서코드를 수정한 후 승인하십시오)')
			return
		}
	}
return		
	li_unq_num = ds_1.NameValue(ll_row,"spec_unq_num")
	ls_dept_tag    = ds_1.NameValue(ll_row,"dept_proj_tag")
	ls_comp_code   = ds_1.NameValue(ll_row,'comp_code')
	if  (confirm("승인처리를 계속하시겠습니까?(승인 후 취소불가)")) {
		ds_spcall.DataID = 'y_sp_z_dept_code_approve.jsp?arg_unq_num=' + li_unq_num +
		                                           '&arg_dept_tag=' + ls_dept_tag  + '&arg_comp_code=' + ls_comp_code 
		ds_spcall.SyncLoad = true
		ds_spcall.reset()
		btnquery_onclick()
		alert("정상처리되었습니다...")
	}
}
//---------------------------------------------------------------------------
function window_onload()                      // window open event
//---------------------------------------------------------------------------
{
	if (f_reject_window()) return 
	top.frames['main_title'].mouse_over()
	
  	ds_seq.DataID = is_ds_seq_addr                       // SEQ NO 의 DATAID
	tr_1.Action = is_tr_1_addr 
	gd_1.format = is_format_1 
	ADE_Radio_1.CodeValue = '1'
	btnquery_onclick()
 
