     String arg_dept_code = req.getParameter("arg_dept_code");
     String arg_yymm = req.getParameter("arg_yymm");
 //---------------------------------------------------------- 
     dSet.addDataColumn(new GauceDataColumn("dept_code",GauceDataColumn.TB_STRING,7));
	  dSet.addDataColumn(new GauceDataColumn("yymm",GauceDataColumn.TB_STRING,8));
	  dSet.addDataColumn(new GauceDataColumn("llevel",GauceDataColumn.TB_STRING,1));
     dSet.addDataColumn(new GauceDataColumn("col_tag",GauceDataColumn.TB_STRING,1));
     dSet.addDataColumn(new GauceDataColumn("name",GauceDataColumn.TB_STRING,255));
   
	 String query =  " select '"+arg_dept_code+"' dept_code, '"+arg_yymm+"' yymm, " +
						" llevel, col_tag ,cat_text name from  " +
						"(SELECT  '3' llevel , b.col_tag , b.cat_text " +
						"from " +
						"	c_spec_const_parent a,  " +
						"	y_budget_detail b  " +
						"WHERE ( a.dept_code = b.dept_code ) and  " +
						"	( a.spec_no_seq = b.spec_no_seq ) and  " +
						"	( ( a.dept_code = '"+arg_dept_code+"') and  " +
						"	  ( a.yymm = '"+arg_yymm+"') ) and  " +
						"	a.spec_no_seq = b.spec_no_seq and  " +
						"	b.col_tag in ( 'M','L','X','S' )  " +
						"group by   b.col_tag , b.cat_text   " +
						"union all	 " +
						"select '2' llevel , 'L' , '노무' cat_text from dual	" +
						"union all	  " +
						"select '2' llevel , 'M' , '재료' cat_text from dual	" +
						"union all	  " +
						"select '2' llevel , 'X' , '경비' cat_text from dual	" +
						"union all	  " +
						"select '2' llevel , 'S' , '외주' cat_text from dual   " +
						"union all    " +
						"select '1' llevel , '0' , long_name from z_code_dept  " +
						"where dept_code = '"+arg_dept_code+"'	) a  " +
						"order by col_tag , llevel ,cat_text  " ;
